<script>
function reloadPage()
  {
  location.reload()
  }
</script>

<h1>RewardBox</h1>

<p>Your randomly generated reward is: </p>
<%= render 'rewards/new_reward_partial' %>

<p><input type="button" value="Get Another Reward" onclick="reloadPage()"></p>
<br><br><br><br>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Size</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rewards.each do |reward| %>
  <tr>
    <td><%= reward.name %></td>
    <td><%= reward.description %></td>
    <td><%= reward.size %></td>
    <td><%= reward.id %></td>
    <td><%= link_to 'Show', reward %></td>
    <td><%= link_to 'Edit', edit_reward_path(reward) %></td>
    <td><%= link_to 'Destroy', reward, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Reward', new_reward_path %>
